# Authentication Core Component - Environment Variables
# Copy this file to .env and modify as needed

# Application Settings
#-----------------------
# Application environment (development, testing, production)
APP_ENV=development
# Enable debug mode (True/False)
DEBUG=False

# API Settings
#-----------------------
# Host to bind the API server
HOST=0.0.0.0
# Port to bind the API server
PORT=8000
# Enable auto-reload for development (True/False)
RELOAD=False

# CORS Settings
#-----------------------
# Allowed origins for CORS (comma-separated list or * for all)
CORS_ORIGINS=*

# Rate Limiting Settings
#-----------------------
# Enable rate limiting (True/False)
RATE_LIMIT_ENABLED=True
# Maximum number of requests allowed in the specified period
RATE_LIMIT_REQUESTS=100
# Period in seconds for rate limiting
RATE_LIMIT_PERIOD_SECONDS=60

# JWT Settings
#-----------------------
# Secret key for JWT token signing (generate a secure random key for production)
JWT_SECRET_KEY=your-super-secret-key-change-in-production
# JWT algorithm (HS256 recommended)
JWT_ALGORITHM=HS256
# Access token expiration time in minutes
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
# Refresh token expiration time in days
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Security Settings
#-----------------------
# Minimum password length
PASSWORD_MIN_LENGTH=8
# Require uppercase letters in passwords (True/False)
PASSWORD_REQUIRE_UPPERCASE=True
# Require lowercase letters in passwords (True/False)
PASSWORD_REQUIRE_LOWERCASE=True
# Require digits in passwords (True/False)
PASSWORD_REQUIRE_DIGIT=True
# Require special characters in passwords (True/False)
PASSWORD_REQUIRE_SPECIAL=True
# Special characters allowed in passwords
PASSWORD_SPECIAL_CHARS=!@#$%^&*()-_=+[]{}|;:,.<>?

# Account Lockout Settings
#-----------------------
# Maximum number of failed login attempts before account lockout
MAX_LOGIN_ATTEMPTS=5
# Account lockout duration in minutes
LOCKOUT_DURATION_MINUTES=15

# Password Reset Settings
#-----------------------
# Password reset token expiration time in minutes
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=30

# Database Settings
#-----------------------
# Database connection URL
# SQLite example: sqlite:///./auth.db
# PostgreSQL example: postgresql://user:password@localhost:5432/dbname
DATABASE_URL=sqlite:///./auth.db
# Enable SQL query logging (True/False)
DATABASE_ECHO=False

# Logging Settings
#-----------------------
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
# Log format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
# Log file path (optional, logs to console if not specified)
# LOG_FILE=logs/auth_core.log